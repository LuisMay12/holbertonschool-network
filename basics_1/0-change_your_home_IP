#!/usr/bin/env bash
# This script updates /etc/hosts so that localhost resolves to 127.0.0.2 and facebook.com resolves to 8.8.8.8

# Add or replace entries in /etc/hosts
# Using tee with sudo because we need root privileges to write to /etc/hosts
sudo sed -i '/localhost/d' /etc/hosts
sudo sed -i '/facebook.com/d' /etc/hosts

echo "127.0.0.2 localhost" | sudo tee -a /etc/hosts > /dev/null
echo "8.8.8.8 facebook.com" | sudo tee -a /etc/hosts > /dev/null
